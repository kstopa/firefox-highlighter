{
    "manifest_version": 3,
    "name": "Web Highlighter",
    "description": "Tool for highlight web pages and export it to a file.",
    "version": "0.1",
    "homepage_url": "https://github.com/kstopa/firefox-highlighter",
    "icons": {
        "48": "icons/icons8-marker-pen.png"
    },
    "permissions": [
        "notifications",
        "storage"
    ],
    "background": {
      "scripts": ["background-script.js"],
      "persistent": false,
      "type": "module"
    },
    
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content-script.js"]
      }
    ]
  }